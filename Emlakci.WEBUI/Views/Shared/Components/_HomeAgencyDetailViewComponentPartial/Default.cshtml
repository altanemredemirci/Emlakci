@model ResultAgencyDTO

<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5">
            <div class="col-lg-8 col-md-12 col-sm-12 text-center wow fadeInUp" data-wow-delay="0.1s">
                <div class="col-lg-6">
                    <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                        <h1 class="mb-3">İlanlar</h1>
                        <p>Hayalinizdeki eve bir adım uzaklıktasınız.</p>
                    </div>
                </div>
                <div class="col-lg-12 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
                    <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-primary active" data-bs-toggle="pill" href="#sell">Satılık</a>
                        </li>
                        <li class="nav-item me-0">
                            <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#rent">Kiralık</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div id="sell" class="tab-pane fade show p-0 active">
                        <div class="row g-4">
                            @foreach (var item in Model.Products.Where(i=> i.Type=="Satılık").ToList())
                            {
                                <div class="col-lg-6 col-md-6">
                                    <div class="property-item rounded overflow-hidden">
                                        <div class="position-relative overflow-hidden">
                                            <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.Id"><img class="img-fluid" src="~/ReaLEstate/img/@item.CoverImage" alt=""></a>
                                            <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@item.Type</div>
                                            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@item.Category.Name</div>
                                        </div>
                                        <div class="p-4 pb-0">
                                            <h5 class="text-primary mb-3">@item.Price.ToString("c")</h5> <!--Türk Lira Formatı-->
                                            <a class="d-block h5 mb-2" href="/Home/ProductDetail/@item.Id">@item.Title</a>
                                            <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.Address,@item.District,@item.City.Name</p>
                                        </div>
                                        <div class="d-flex border-top">
                                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@item.ProductDetails.Size m2</small>
                                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@item.ProductDetails.BedRoomCount Yatak</small>
                                            <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@item.ProductDetails.BathCount Banyo</small>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.ReadMore == "true")
                            {
                                <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                                    <a class="btn btn-primary py-3 px-5" href="">Daha Fazla İlan</a>
                                </div>
                            }
                        </div>
                    </div>
                    <div id="rent" class="tab-pane fade p-0">
                        <div class="row g-4">

                            @foreach (var item in Model.Products.Where(i=> i.Type=="Kiralık").ToList())
                            {
                                <div class="col-lg-6 col-md-6">
                                    <div class="property-item rounded overflow-hidden">
                                        <div class="position-relative overflow-hidden">
                                            <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.Id"><img class="img-fluid" src="~/ReaLEstate/img/@item.CoverImage" alt=""></a>
                                            <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@item.Type</div>
                                            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@item.Category.Name</div>
                                        </div>
                                        <div class="p-4 pb-0">
                                            <h5 class="text-primary mb-3">@item.Price.ToString("c")</h5> <!--Türk Lira Formatı-->
                                            <a class="d-block h5 mb-2" href="/Home/ProductDetail/@item.Id">@item.Title</a>
                                            <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.Address,@item.District,@item.City.Name</p>
                                        </div>
                                        <div class="d-flex border-top">
                                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@item.ProductDetails.Size m2</small>
                                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@item.ProductDetails.BedRoomCount Yatak</small>
                                            <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@item.ProductDetails.BathCount Banyo</small>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.ReadMore == "true")
                            {
                                <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                                    <a class="btn btn-primary py-3 px-5" href="">Daha Fazla İlan</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Call to Action Start -->
            <div class="col-lg-4 col-md-12 col-sm-12 text-center wow fadeInUp" data-wow-delay="0.1s"
                 style="max-width: 540px;">

                <div class="row g-0 property-item rounded overflow-hidden">
                    <div class="sidebar-title p-4">
                        <h4>İletişim</h4>
                    </div>
                    <div class="col-md-4">
                        <img src="~/realestate/img/@Model.Image" class="img-fluid rounded-start  w-100">
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">@Model.FullName</h5>
                        <div class="card-body">
                            <div>
                                <p>@Model.Phone
                                <p>
                            </div>
                            <div>
                                <p>@Model.Email</p>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-style w-100">
                        İletişime Geç
                    </button>
                </div>
                @await Component.InvokeAsync("_HomeProductDetailPopularViewComponentPartial")

            </div>
            <!-- Call to Action End -->
           
        </div>
      
    </div>
</div>
<!-- Property List End -->