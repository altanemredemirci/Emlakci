@model List<ResultProductTypeModel>
<!-- Category Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">İlan Kategorileri</h1>
            <p>Aradığınız her kategoride ilanlar bulabilirsiniz. Türkiye'nin en büyük gayrimenkül sitesindesiniz.</p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                    <a class="cat-item d-block bg-light text-center rounded p-3" href="">
                        <div class="rounded p-4">
                            <div class="icon mb-3">
                                <img class="img-fluid" src="~/ReaLEstate/img/@item.Icon" alt="Icon">
                            </div>
                            <h6>@item.Name</h6>
                            <span>@item.Products.Count İlan</span>
                        </div>
                    </a>
                </div>
            }
          
        </div>
    </div>
</div>
<!-- Category End -->